pipeline {
    agent any 
  
    parameters {
        string(name: 'SPEC', defaultValue: 'cypress/e2e/WebApplictaions/**/**', description: 'Enter the file')
        choice(name: 'BROWSER', choices: ['chrome', 'edge', 'firefox'], description: 'Choose the browser')
    }
    stages {
        stage('Building') {
            steps {
                echo 'Building the Application'
            }
        }
        stage('Testing') {
            steps {
                sh 'npm i'
                sh "npx cypress open --browser=${params.BROWSER} --spec ${params.SPEC}"
            }
        }
        stage('Deploying') {
            steps {
                echo 'Deploying the Application'
            }
        }
    }
    post {
        always {
            publishHTML([
                allowMissing: false, 
                alwaysLinkToLastBuild: false, 
                keepAll: true, 
                reportDir: 'cypress/report', 
                reportFiles: 'index.html', 
                reportName: 'HTML Report', 
                reportTitles: '', 
                useWrapperFileDirectly: true
            ])
        }
    }
}
